@model ICollection<MultiplexKino.Areas.Identity.Data.MultiplexKinoUser>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    ViewData["Title"] = "Users";
}


<div class="text-center">
    <h2 class="display-4" style="color:antiquewhite; margin-top:20px">Korisnici</h2>
    @if ( @Model != null && @Model.Any())
    {
        <table class="tabelaKorisnici">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Email</th>
                <th scope="col">Edit</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <td scope="row">@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-primary" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                </td>
            </tr>
            }
            </tbody>
        </table>
    }
</div>

<div class="text-center">

</div>