@model MultiplexKino.Models.Film.FilmSnimiVM

@{
    ViewData["Title"] = "Dodaj Film";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var zanrovi = ViewData["Zanrovi"] as IEnumerable<SelectListItem>;
}

<div class="pageContainer">
    <h4 style="color:whitesmoke">Dodavanje filma</h4>
    <hr style="color:whitesmoke"/>
    <div class="row">
        <div class="col-md-4">
            <form class="formFilm" asp-action="Dodaj" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Naslov" class="control-label"></label>
                    <input style="width:50%" asp-for="Naslov" class="form-control" />
                    <span asp-validation-for="Naslov" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ZanrId" class="control-label">Zanr</label>
                    <select style="width:50%" asp-for="ZanrId" asp-items="zanrovi" class="form-control"></select>
                    <span asp-validation-for="ZanrId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Trajanje" class="control-label">Trajanje (min)</label>
                    <input style="width:30%" asp-for="Trajanje" class="form-control" />
                    <span asp-validation-for="Trajanje" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GodinaSnimanja" class="control-label">Godina snimanja</label>
                    <input style="width:30%" asp-for="GodinaSnimanja" class="form-control" />
                    <span asp-validation-for="GodinaSnimanja" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reditelj" class="control-label">Reditelj</label>
                    <input asp-for="Reditelj" class="form-control" />
                    <span asp-validation-for="Reditelj" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Glumci" class="control-label">Glumci</label>
                    <textarea asp-for="Glumci" class="form-control" rows="6"></textarea>
                    <span asp-validation-for="Glumci" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VideoLink" class="control-label">Video link</label>
                    <input asp-for="VideoLink" class="form-control" />
                    @*<span asp-validation-for="VideoLink" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label asp-for="Sadrzaj" class="control-label">Sadržaj</label>
                    <textarea asp-for="Sadrzaj" class="form-control" rows="6"></textarea>
                    @*<span asp-validation-for="Sadrzaj" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label class="control-label">Plakat</label><br />
                    <input type="file" name="file" id="file" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Snimi" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <button class="btnListaDodaj">
        <a asp-action="Index">Nazad na listu</a>
    </button>

</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}


