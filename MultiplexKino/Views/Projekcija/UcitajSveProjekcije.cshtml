@model List<MultiplexKino.Models.Projekcija.ProjekcijaUcitajSveVM>


@{
    ViewData["Title"] = "UcitajSveProjekcije";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pageContainer">

    <div class="pretragaContainer">
        <div class="frmPretraga">
            <form asp-action="UcitajProjekcijePoFilteru" method="get" style="width:100%">
                <div style="width:100%">
                    <input class="pretragaFilm" type="search" placeholder="Naziv filma" name="searching" value="@ViewData["CurrentFilter"]" style="width:40%" />
                    <input type="submit" value="Pretraga" class="buttonPretraziFilm" />
                </div>
            </form>
        </div>

        <div class="frmPretraga">
            <form asp-action="UcitajProjekcijePoDanu" method="get" style="width:100%">
                <div style="width:100%; padding-left:380px">
                    <label style="color:white; font-family:Arial, Helvetica, sans-serif; font-size:1.1em" for="datum">Odaberite dan: </label>
                    <input class="pretragaDatum" type="date" name="datum" />
                    <input type="submit" value="Pretraga" class="buttonPretraziFilm" />
                </div>
            </form>
        </div>
    </div>

    @if (Model.Count() == 0)
    {
        <div style="margin:50px 0 0 20px">
            <h5 style="color:white; font-family:Cambria; font-weight:bold">Nema rezultata pretrage... </h5>
        </div>
    }
    else
    {
        @foreach (var projekcija in Model)
        {
            <div class="projekcija">
                <dl class="rowProjekcija">
                    @if (!string.IsNullOrEmpty(projekcija.Film.Plakat))
                    {
                        <a asp-controller="Projekcija" asp-action="KupiKartu" asp-route-id="@projekcija.Id">
                            <img class="imgProjekcija" src="@projekcija.Film.Plakat" />
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Projekcija" asp-action="KupiKartu" asp-route-id="@projekcija.Id">
                            <img class="imgProjekcija" src="~/img/no-movie-posters.jpg" style="max-width:450px; max-height:650px" />
                        </a>
                    }
                </dl>
                <dl class="rowProjekcija2">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => projekcija.Film.Naslov)
                    </dt>
                    <dd class="col-sm-15">
                        @Html.DisplayFor(model => projekcija.Film.Naslov)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => projekcija.Film.Reditelj)
                    </dt>
                    <dd class="col-sm-15">
                        @Html.DisplayFor(model => projekcija.Film.Reditelj)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => projekcija.Film.Glumci)
                    </dt>
                    <dd class="col-sm-15">
                        @Html.DisplayFor(model => projekcija.Film.Glumci)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => projekcija.Film.Zanr)
                    </dt>
                    <dd class="col-sm-15">
                        @Html.DisplayFor(model => projekcija.Film.Zanr)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => projekcija.Film.Trajanje)
                    </dt>
                    <dd class="col-sm-15">
                        @Html.DisplayFor(model => projekcija.Film.Trajanje) minuta
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => projekcija.Film.GodinaSnimanja)
                    </dt>
                    <dd class="col-sm-15">
                        @Html.DisplayFor(model => projekcija.Film.GodinaSnimanja)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => projekcija.VrijemeDo)
                    </dt>
                    <dd class="col-sm-15">
                        @Html.DisplayFor(model => projekcija.VrijemeDo)
                    </dd>
                </dl>
                @*<a asp-page="/CinemaHall/SeatSelection" asp-route-id="@projekcija.Id" class="btn-select">Select</a>*@

            </div>
        }
    }
</div>
