@model List<MultiplexKino.Models.Informacija.UcitajInformacijeVM>

@{
    ViewData["Title"] = "UcitajInformacije";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="pageContainer">
    <h2 style="color: whitesmoke">Obavjesti</h2>
    <hr style="color:wheat" />
    <div class="listaInformacija">
        @if (Model.Count() == 0)
        {
            <div style="margin:50px 0 0 20px">
                <h5 style="color:white; font-family:Cambria; font-weight:bold">Trenutno nema informacija... </h5>
            </div>
        }
        else
        {
            @foreach (var informacija in Model)
            {
                <a asp-controller="Informacija" asp-action="PrikaziInformaciju" asp-route-id="@informacija.Id">
                    <div class="informacija">
                        <h3><img src="~/img/icons8-info-64.png" style="width:50px"; height:50px/> @Html.DisplayFor(model => informacija.Naziv)</h3>
                        <p style="color:antiquewhite; padding-left:55px; font-size:1.2em; font-family:Candara Light; text-decoration:none">
                            Datum i vrijeme: @Html.DisplayFor(model => informacija.Kreiran)
                        </p>
                        @*<p style="color:white; padding-left:13px; font-size:1.4em; font-family:Calibri; text-decoration:none">
                            @Html.DisplayFor(model => informacija.Opis)
                        </p>*@
                    </div>
                </a>
            }
        }
    </div>
</div>
